doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Base Convertor
    style.
      /* apply some basic styles to the page */
      * {
      box-sizing: border-box;
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      }
      body {
      background-color: #222222;
      }
      /* style the calculator container */
      .calculator {
      display: flex;
      justify-content: center;
      margin: 20px auto;
      max-width: 400px;
      padding: 20px;
      background-image:linear-gradient(#5ea6ff69,#77ff5e) ;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      border-radius: 5px;
      }
      /* style the input and select elements */
      input,
      select {
      width: 100%;
      padding: 10px;
      border-radius: 5px;
      border: 1px solid #973f3f;
      font-size: 16px;
      }
      /* style the button container */
      .bat {
      display: flex;
      justify-content: space-between;
      }
      /* style the Convert and Reset buttons */
      .converter,
      button {
      padding: 10px 20px;
      border-radius: 5px;
      border: none;
      font-size: 16px;
      font-weight: bold;
      color: #fff;
      background-color: #4CAF50;
      cursor: pointer;
      transition: background-color 0.2s ease-in-out;
      }
      .converter:hover,
      button:hover {
      background-color: #2b6e2e;
      }
      /* style the Result textarea */
      textarea {
      width: 100%;
      height: 100px;
      padding: 10px;
      border-radius: 5px;
      border: 1px solid #ccc;
      font-size: 16px;
      resize: none;
      }
      /* add media query for smaller screens */
      @media screen and (max-width: 480px) {
      .calculator {
      max-width: 100%;
      padding: 10px;
      }
      input,
      select,
      textarea {
      font-size: 14px;
      }
      }
