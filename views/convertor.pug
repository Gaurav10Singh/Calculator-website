    script.
      let a = document.querySelector('#sel1');
      let b = document.querySelector('#sel2');
      let c = document.querySelector('#x');
      function onconvert() {
      let decimalValue = convertToDecimal(c.value, a.value);
      let newNumber = convertFromDecimal(decimalValue, b.value);
      console.log(c.value + " in base " + a.value + " is " + newNumber + " in base " + b.value);
      document.getElementById('ans').innerHTML = newNumber;
      }
      function convertToDecimal(number, base) {
      let decimalValue = 0;
      let power = 0;
      for (let i = number.length - 1; i >= 0; i--) {
      let digit = parseInt(number.charAt(i), base);
      decimalValue += digit * Math.pow(base, power);
      power++;
      }
      return decimalValue;
      }
      function convertFromDecimal(decimalValue, base) {
      let newNumber = "";
      while (decimalValue > 0) {
      let remainder = decimalValue % base;
      newNumber = remainder.toString() + newNumber;
      decimalValue = Math.floor(decimalValue / base);
      }
      return newNumber;
      }
