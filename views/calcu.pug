doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Simple Calculator
    style.
      .calculator {
        width: 400px;
        margin: 0 auto;
        background-color: #130000;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
      }
      .calculator h1 {
          margin: 0;
          text-align: center;
          font-size: 36px;
          font-weight: 300;
          color: #00ffff;
      }
      .calarea {
          margin: 20px 0;
          text-align: right;
          position: relative;
      }
      .calarea input,
      .calarea textarea {
          width: 80%;
          border: none;
          font-size: 28px;
          font-weight: 300;
          margin-right: 5%;
          padding: 10px 15px;
          border-radius: 5px;
          box-shadow: inset 0 0 5px rgba(0, 0, 0, 0.3);
      }
      .calarea input:focus,
      .calarea textarea:focus {
          outline: none;
          box-shadow: inset 0 0 5px rgba(0, 0, 0, 0.5);
      }
      .row {
          display: flex;
          justify-content: space-between;
      }
      .row button {
          flex: 1;
          margin: 10px;
          padding: 15px 0;
          border: none;
          border-radius: 5px;
          font-size: 24px;
          font-weight: 300;
          color: #fff;
          background-color: #3498db;
          cursor: pointer;
          transition: background-color 0.2s ease-in-out;
      }
      .row button:hover {
          background-color: #2980b9;
      }
      @media screen and (max-width: 600px) {
          .calculator {
              width: 90%;
              max-width: 500px;
          }
          .row {
              flex-wrap: wrap;
          }
          .row button {
              flex-basis: 30%;
              max-width: 70px;
              margin: 5px;
              font-size: 20px;
          }
      }
